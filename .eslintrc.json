{
  //todo: rever configuração do eslint
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-class-members": "off",
      "no-console": "off",
      "class-methods-use-this": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "typescript": {

        }
      }
    }
  }
